<%= simple_form_for @job, html: {multipart: true, class: "form-group" } do |f| %> 
  <%= f.input :title, input_html: {class: "form-control"} %>
  <%= f.input :details, input_html: {class: "form-control"}, placeholder: "Details about job" %>
  <%= f.input :location, input_html: {class: "form-control"}, placeholder: "Location of job" %>
  <%= f.input :requirement, input_html: {class: "form-control"}, placeholder: "Requirement to apply" %>
  <%= f.label :close_date %>
  <%= f.date_field :close_date, label: "Closing Date", input_html: {class: "form-control"} %>
  <%= f.input :how_to_apply, lable: "How to Apply", input_html: {class: "form-control"}, placeholder: "Input details on how to apply", hint: "e.g: a link" %>
  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>
